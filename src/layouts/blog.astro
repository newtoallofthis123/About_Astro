---
export interface Props {
    title: string
}
import BlogNav from "../components/blog_nav";
import BlogBase from './blog_base.astro';
const {title} = Astro.props
---

<BlogBase title={title}>
    <BlogNav client:load />
    <main>
        <slot />
        <footer class="text-center p-5 border-black border-t-2">
            <h1 class="font-bold text-4xl"> 
                &copy NoobScience {new Date().getFullYear()}
            </h1>
        </footer>
    </main>
</BlogBase>
<style is:inline>
    nav{
        background-color: #f3f2f2;
    }
    body{
        background-color: #fbfbfb;
    }
    ::selection{
        background-color: #aef444;
        color: #000;
    }
    main {
            font-family: 'Inter', --apple-system, BlinkMacSystemFont, 'Segoe UI',
                Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
                sans-serif;
        }
    h1{
        font-family: 'Archivo Black', --apple-system, BlinkMacSystemFont, 'Segoe UI',
            Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
            sans-serif;
    }
    p{
        font-size: 1.2rem;
        line-height: 2.5rem;
    }
    a{
        text-decoration: underline;
    }
    @media (max-width: 768px){
        h1,h2{
            font-size: 1.5rem;
            line-height: 1.6;
        }
        p{
            font-size: 1rem;
            line-height: 2.2rem;
        }
    }
</style>