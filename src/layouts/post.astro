---
import BlogNav from '../components/blog_nav';
import Base from './base.astro';
const { frontmatter }= Astro.props;
---

<Base title={frontmatter.title + " | Ishan Writes"}>
    <BlogNav client:load />
    <main>
        <div class="p-5">
            <h1 class="text-center p-5 font-bold text-6xl">{frontmatter.title}</h1>
            {
                frontmatter.author && (
                <h2 class="text-lg font-light text-center p-2">Written by {frontmatter.author} on {
                new Date(frontmatter.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                })
                }</h2>
                )
            }
            <h2 class="text-lg font-light text-center p-2">
                {frontmatter.wordsRead} words | Avg {frontmatter.minutesRead}
            </h2>
            <div class="flex flex-col justify-center items-center pb-5">    
                <div class="w-5/6 p-5">
                    {
                        frontmatter.image && (
                            <img class="rounded-md" src={frontmatter.image} alt="Blog Header">
                        )
                    }
                </div>
                <div class="w-full px-4 pb-2 md:p-0 md:w-4/5">
                    <slot />
                </div>
            </div>
        </div>
                    {
                frontmatter.tags && (
                    <div class="flex flex-wrap justify-center items-center p-2">
                        {
                            frontmatter.tags.map((tag:any) => (
                                <a href={"/blog/tags/" + tag} class="p-2 m-2 bg-gray-200 rounded-md">{tag}</a>
                            ))
                        }
                    </div>
                )
            }
        <footer class="text-center p-5 border-black border-t-2">
            <h1 class="font-bold text-2xl"> 
                &copy NoobScience {new Date().getFullYear()}
            </h1>
            <p class="text-lg p-4"> 
                All Rights Reserved
            </p>
        </footer>
    </main>
</Base>
<style is:inline>
    body {
        background-color: #f8f8f8;
    }
    ::selection {
        background-color: #fffc65;
        color: #000;
    }
    main {
        font-family: 'Libre Baskerville', 'Times New Roman', Times, serif;
    }
    h1 {
        font-family: 'Yeseva One', 'Times New Roman', Times, serif;
    }
    h2{
        font-size: 2rem;
        font-weight: 700;
        padding: 1.5rem 0;
    }
    h3{
        font-size: 1.5rem;
        font-weight: 700;
        padding: 1rem 0;
    }
    p {
        font-size: 1.2rem;
        line-height: 2.5rem;
    }
    a {
        text-decoration: underline;
    }
    ol{
        font-size: 1.2rem;
        line-height: 2.5rem;
        list-style-type: decimal;
        padding-left: 1.2rem;
    }
</style>
