        background-color: #6bfaec;
        color: #000000;
    }
    ::-webkit-scrollbar {
        width: 10px;
    }
    ::-webkit-scrollbar-thumb {
        background: #888;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    ::-webkit-scrollbar-track:hover {
        background: #ddd;
    }
    main {
        font-family: 'Libre Baskerville', 'Times New Roman', Times, serif;
    }
    h1 {
        font-family: 'Yeseva One', 'Times New Roman', Times, serif;
    }
    h2 {
        font-size: 1.6rem;
        font-weight: 700;
        padding: 0.75rem 0;
    }
    h3 {
        font-size: 1.5rem;
        font-weight: 700;
        padding: 1rem 0;
    }
    h4 {
        font-weight: 400;
        padding: 0;
    }
    p {
        font-size: 1rem;
        padding: 0.5rem 0;
        line-height: 2.2rem;
    }
    a {
        text-decoration: underline;
    }
    ol {
        font-size: 1rem;
        line-height: 2.2rem;
        list-style-type: decimal;
        padding-left: 1.2rem;
    }
    blockquote {
        line-height: 2.5rem;
        padding: 1rem 0;
        margin: 1rem 0;
        border-left: 2px solid #000;
        padding-left: 1rem;
    }
    blockquote > p {
        font-size: 1.2rem;
        font-style: italic;
    }
    pre {
        padding: 1rem;
        border-radius: 12px;
        font-size: 1.1rem;
    }
    .heading {
        text-decoration: none;
    }
    svg {
        max-width: 100%;
        overflow-x: scroll;
    }
    @media (max-width: 768px) {
        h1 {
            font-size: 3rem;
        }
        h2 {
            font-size: 1.8rem;
            padding: 0.5rem 0;
        }
        h3 {
            font-size: 1.5rem;
        }
        p {
            font-size: 1rem;
            line-height: 2rem;
        }
        ol {
            font-size: 1rem;
        }
        blockquote > p {
            font-size: 1.2rem;
        }
    }
</style>
