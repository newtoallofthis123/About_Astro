---
import BlogNav from '../components/blog_nav';
import Base from './base.astro';
const { frontmatter } = Astro.props;
import { themes } from '../pages/blog/themes';
import UpdateArchive from '../components/updates/archive';
//@ts-ignore
const theme = themes[frontmatter.theme] || themes['default'];
let posts = await Astro.glob('../pages/blog/*/*.mdx');
posts.sort(
    (a: any, b: any) =>
        new Date(b.frontmatter.date).getTime() -
        new Date(a.frontmatter.date).getTime()
);
let recommended = posts.filter(
    (post: any) =>
        post.frontmatter.category === frontmatter.category &&
        post.frontmatter.title !== frontmatter.title
);
posts.map((post: any) => {
    frontmatter.tags.map((tag: any) => {
        if (
            post.frontmatter.tags.includes(tag) &&
            post.frontmatter.title !== frontmatter.title &&
            !recommended.includes(post)
        ) {
            recommended.push(post);
        }
    });
});
posts = posts.filter(
    (post: any) =>
        post.frontmatter.title !== frontmatter.title &&
        post.frontmatter.draft !== true &&
        !recommended.includes(post)
);
recommended = recommended.filter(
    (post: any) => post.frontmatter.draft !== true
);
---

<Base
    title={frontmatter.title + ' | Ishan Quicks'}
    img={frontmatter.image || '/assets/banner.png'}
    description={frontmatter.description}
>
    <BlogNav client:load />
    <style
        define:vars={{
            color: theme.color,
            bg: theme.background,
            textColor: theme.textColor,
            textBg: theme.textBackground,
            full: theme.full,
        }}
    >
        #full {
            color: var(--textColor);
            background-color: var(--textBg);
        }
        #main {
            color: var(--color);
            background-color: var(--bg);
        }
        #content {
            color: var(--textColor);
            background-color: var(--textBg);
        }
        #recommended::-webkit-scrollbar {
            width: 0px;
            background: transparent;
        }
    </style>
    <main id={theme.full ? 'full' : ''}>
        <div id="main" class="p-2 md:p-5">
            <h1 class="text-center p-5 font-bold text-3xl md:text-6xl">
                {frontmatter.title}
            </h1>
            <h2 class="text-sm md:text-lg font-light text-center p-2">
                {frontmatter.description}
            </h2>
            {
                frontmatter.author && (
                    <h2 class="text-sm md:text-lg font-light text-center p-2">
                        Written by {frontmatter.author} on{' '}
                        {new Date(frontmatter.date).toLocaleDateString(
                            'en-US',
                            {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric',
                            }
                        )}
                    </h2>
                )
            }
            <h2 class="text-sm md:text-lg font-light text-center p-2">
                {frontmatter.wordsRead} words | Avg {frontmatter.minutesRead}
            </h2>
            <div class="flex flex-col justify-center items-center pb-2">
                <div class="w-5/6 md:p-5">
                    {
                        frontmatter.image && (
                            <img
                                class="rounded-md"
                                src={frontmatter.image}
                                alt="Blog Header"
                            />
                        )
                    }
                </div>
            </div>
        </div>
        <div class="flex flex-row justify-center p-1">
            <div
                id="content"
                class="md:relative w-full pb-2 md:w-4/6 p-2 md:p-5"
            >
                <slot />
            </div>
        </div>
        {
            frontmatter.tags && (
                <div class="flex flex-wrap justify-center items-center p-2">
                    {frontmatter.tags.map((tag: any) => (
                        <a
                            href={'/blog/tags/' + tag}
                            class="p-2 m-2 bg-gray-200 text-black rounded-md"
                        >
                            {tag}
                        </a>
                    ))}
                </div>
            )
        }
        <div>
            {
                recommended.length > 0 && (
                    <div>
                        <h1 class="text-2xl text-center font-bold pt-2">
                            You might also like
                        </h1>
                        <div class="flex border-gray-500 flex-col md:mx-10 p-2 md:px-10 cursor-pointer justify-center items-center">
                            {recommended.map((post: any) => (
                                <div
                                    onclick={
                                        "location.href = '" + post.url + "'"
                                    }
                                    class="flex flex-col md:flex-row justify-center items-center px-5 py-2"
                                >
                                    <div class="w-full md:w-2/6">
                                        <img
                                            class="rounded-md"
                                            src={post.frontmatter.image}
                                            alt="Blog Header"
                                        />
                                    </div>
                                    <div class="md:pl-10 w-full md:w-4/6">
                                        <h2 class="text-2xl font-bold p-2">
                                            {post.frontmatter.title}
                                        </h2>
                                        <p class="text-lg font-light p-2">
                                            {post.frontmatter.description}
                                        </p>
                                        <p class="text-lg font-light p-2">
                                            {new Date(
                                                post.frontmatter.date
                                            ).toDateString()}{' '}
                                            | Avg {post.frontmatter.minutesRead}
                                        </p>
                                        <a
                                            href={post.url}
                                            class="text-lg font-light p-2 underline"
                                        >
                                            Read More
                                        </a>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                )
            }
        </div>
        <div class="p-5">
            <h1 class="font-bold text-center p-2 text-3xl">About the Author</h1>
            <p class="px-10 py-1">
                Ishan Joshi is a student and open source enthusiast. He goes by
                NoobScience online. He is currently pursuing his Bachelors in
                Computer Science and Engineering from <a
                    href="https://griet.ac.in">GRIET</a
                >. When he is not coding, you can find him watching a movie or
                just chilling. You can find him on <a
                    href="https://twitter.com/noobscience1">Twitter</a
                > and basically any <a href="/social">other</a> social media platforms.
                Ask him a question, however, beware, you might get a reply that you
                would not expect. You can also subscribe to his <a
                    href="https://noobscience.substack.com">newsletter</a
                > to get updates about his latest posts. Thanks for reading this
                far. Have a nice day!
            </p>
        </div>
        <footer class="text-center p-5 border-black border-t-2">
            <h1 class="font-bold text-2xl">
                &copy NoobScience {new Date().getFullYear()}
            </h1>
            <p class="text-lg p-4">All Rights Reserved</p>
        </footer>
    </main>
    <script define:vars={{ frontmatter: frontmatter }}>
        const copy_curl = () => {
            navigator.clipboard.writeText(
                'curl https://raw.githubusercontent.com/newtoallofthis123/About_Astro/main/src/pages' +
                    frontmatter.url +
                    ".mdx -o '" +
                    frontmatter.title +
                    ".mdx'"
            );
        };
        const curl_btn = document.querySelector('#copy_curl');
        curl_btn.addEventListener('click', copy_curl);
    </script>
</Base>
<style is:inline>
    ::selection {
        background-color: #6bfaec;
        color: #000000;
    }
    ::-webkit-scrollbar {
        width: 10px;
    }
    ::-webkit-scrollbar-thumb {
        background: #888;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    ::-webkit-scrollbar-track:hover {
        background: #ddd;
    }
    main {
        font-family: 'Libre Baskerville', 'Times New Roman', Times, serif;
    }
    h1 {
        font-family: 'Yeseva One', 'Times New Roman', Times, serif;
    }
    h2 {
        font-size: 1.6rem;
        font-weight: 700;
        padding: 0.75rem 0;
    }
    h3 {
        font-size: 1.5rem;
        font-weight: 700;
        padding: 1rem 0;
    }
    h4 {
        font-weight: 400;
        padding: 0;
    }
    p {
        font-size: 1rem;
        padding: 0.5rem 0;
        line-height: 2.2rem;
    }
    a {
        text-decoration: underline;
    }
    ol {
        font-size: 1rem;
        line-height: 2.2rem;
        list-style-type: decimal;
        padding-left: 1.2rem;
    }
    blockquote {
        line-height: 2.5rem;
        padding: 1rem 0;
        margin: 1rem 0;
        border-left: 2px solid #000;
        padding-left: 1rem;
    }
    blockquote > p {
        font-size: 1.2rem;
        font-style: italic;
    }
    pre {
        padding: 1rem;
        border-radius: 12px;
        font-size: 1.1rem;
    }
    .heading {
        text-decoration: none;
    }
    svg {
        max-width: 100%;
        overflow-x: scroll;
    }
    @media (max-width: 768px) {
        h1 {
            font-size: 3rem;
        }
        h2 {
            font-size: 1.8rem;
            padding: 0.5rem 0;
        }
        h3 {
            font-size: 1.5rem;
        }
        p {
            font-size: 1rem;
            line-height: 2rem;
        }
        ol {
            font-size: 1rem;
        }
        blockquote > p {
            font-size: 1.2rem;
        }
    }
</style>
