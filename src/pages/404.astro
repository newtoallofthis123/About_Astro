---
export const prerender = true
import Normal from "../layouts/normal.astro";
const url = Astro.url
---

<Normal title="404 Resource Not Found">
    <div class="flex flex-col md:flex-row">
        <div class="w-full md:w-1/2">
            <div style="margin-top: 8vw;" class="text-center mx-10 md:mx-0">
                <h1 class="md:text-6xl text-3xl font-bold">
                    Resource Not Found
                </h1>
                <p class="p-8 text-xl">
                    Hey My Guy! This is the URL you were looking for:
                </p>
                <p class="text-xl">
                    <span class="bg-red-400 p-2">
                        {url}
                    </span>
                </p>
                <p class="p-8 text-xl">
                    This site has a lot of resources, but this one isn't one of them.
                </p>
                <div>
                    <button class="btn text-xl bg-yellow-300">
                        <a href="/">
                            Go Home
                        </a>
                    </button>
                </div>
            </div>
            <div style="margin-top: 6vw;" class="text-center">
                <h1 class="text-3xl font-bold">
                    Atleast get inspired
                </h1>
                <blockquote class="p-10">
                    <p class="text-xl">
                        <span id="quote"></span>
                    </p>
                    <p class="text-xl">
                        <span class="text-gray-500">
                            - <span id="author"></span>
                        </span>
                    </p>
                </blockquote>
            </div>
        </div>
        <div class="w-full md:w-1/2">
            <>
                <img src="/assets/404.svg" class="w-full" alt="">
            </>
        </div>
    </div>
</Normal>
<script>
    const quotes = await fetch("https://api.quotable.io/quotes/random?maxLength=300&minLength=100&limit=1")
    const quote = await quotes.json()
    //@ts-ignore
    document.querySelector("#quote").innerHTML = quote[0].content
    //@ts-ignore
    document.querySelector("#author").innerHTML = quote[0].author
</script>