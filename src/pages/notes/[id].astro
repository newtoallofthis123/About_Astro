---
import Normal from "../../layouts/normal.astro"
import Note from "../../components/notes/note"
const {id} = Astro.params
---

<Normal title={id + " | Ishan's Notes"}>
  <Note hash={id} client:visible />
</Note>
<style is:inline>
    h1{
        font-size: 2.5rem;
        text-align: center;
        font-weight: 700;
    }
    h2,h3{
        font-weight: 700;
    }
    h2{
        font-size: 2rem;
        padding: 0.5rem 0;
    }
    h3{
        font-size: 1.5rem;
    }
    p{
        font-size: 1.2rem;
        padding: 0.25rem 0;
    }
    a{
        text-decoration: underline;
    }
    img{
        max-width: 100%;
    }
    ul{
        list-style: disc;
        padding-left: 1rem;
    }
    ol{
        list-style: decimal;
        padding-left: 1rem;
    }
    blockquote{
        border-left: 0.25rem solid #eee;
        padding-left: 1rem;
    }
</style>